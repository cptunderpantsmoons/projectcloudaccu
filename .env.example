# Application
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://your-frontend.example.com

# Database (prefer DATABASE_URL from Railway)
DATABASE_URL=
DATABASE_HOST=
DATABASE_PORT=5432
DATABASE_USERNAME=
DATABASE_PASSWORD=
DATABASE_NAME=
DATABASE_SSL=true
DATABASE_SYNCHRONIZE=false
DATABASE_MIGRATIONS_RUN=true

# Authentication
JWT_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Rate limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# File storage (Railway: use s3 or minio; avoid local in production)
FILE_STORAGE_PROVIDER=s3
FILE_STORAGE_BUCKET=
FILE_STORAGE_REGION=ap-southeast-2
FILE_STORAGE_ENDPOINT=
FILE_STORAGE_ACCESS_KEY_ID=
FILE_STORAGE_SECRET_ACCESS_KEY=
FILE_BASE_URL=
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
STORAGE_QUOTA=1073741824

# Email
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=no-reply@accu-platform.com

# Redis (optional)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# External API
CER_API_BASE_URL=https://api.cleanenergyregulator.gov.au
CER_API_KEY=
CER_API_TIMEOUT=30000

# Feature flags
ENABLE_WORKFLOW_ENGINE=false
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_CER_API_INTEGRATION=false
ENABLE_ANALYTICS=false

# Temporal (optional)
TEMPORAL_ADDRESS=
TEMPORAL_NAMESPACE=
TEMPORAL_TASK_QUEUE=
TEMPORAL_TLS_ENABLED=false
TEMPORAL_TLS_SERVER_NAME=
TEMPORAL_TLS_ROOT_CA=
TEMPORAL_TLS_CLIENT_CERT=
TEMPORAL_TLS_CLIENT_KEY=

# Frontend build
NEXT_PUBLIC_API_URL=https://your-backend.example.com/api
